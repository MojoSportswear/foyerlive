{
  "name": "theme-shopify-demo",
  "version": "1.1.0",
  "description": "Example theme for FoyerLive transact application",
  "scripts": {
    "start": "fl-cli --start --port 9082 --theme",
    "build": "fl-cli --build --theme",
    "publish": "fl-cli --publish --env=test",
    "publish:local": "fl-cli --publish --env=local"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/foyerlive/transact-theme-example.git"
  },
  "keywords": [
    "foyerlive",
    "attract",
    "present",
    "presentation"
  ],
  "author": "Richard Green <rg@ie.com.au> (http://github.com/jturle)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/foyerlive/transact-theme-example/issues"
  },
  "homepage": "https://github.com/foyerlive/transact-theme-example#readme",
  "dependencies": {
    "application-base-react": "github:foyerlive/application-base-react",
    "react-router": "^3.0.2"
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-0",
      "react"
    ],
    "plugins": [
      "jsx-control-statements",
      "syntax-async-functions",
      "transform-regenerator"
    ],
    "env": {
      "development": {
        "presets": [
          "react-hmre"
        ]
      }
    }
  },
  "eslintConfig": {
    "ecmaFeatures": {
      "jsx": true,
      "modules": true
    },
    "env": {
      "browser": true,
      "node": true
    },
    "parser": "babel-eslint",
    "rules": {
      "quotes": [
        2,
        "single"
      ],
      "strict": [
        2,
        "never"
      ],
      "react/jsx-uses-react": 2,
      "react/jsx-uses-vars": 2,
      "react/react-in-jsx-scope": 2
    },
    "plugins": [
      "react"
    ]
  }
}
